{# PHASE BANNER #}
{{ govukPhaseBanner({
    tag: {
    html: "Prototype: &nbsp" ~ version,
    classes: 'govuk-tag--green' 
},
text: 'This is used to test new ideas and get feedback from users.'
}) }}

{# GRID #}
<div class="govuk-grid-row govuk-!-padding-top-4">
    {# BACK LINK #}
    {% if showBackLink %}
        <div class="govuk-grid-column-one-half govuk-!-padding-top-2">
            {{ govukBackLink({
                text: "Back",
                href: "javascript:history.back()",
                classes: "govuk-!-display-inline-block"
            }) }} 
        </div>
        {% else %}
            <div class="govuk-grid-column-one-half govuk-!-padding-top-3">
                
            </div>
        {% endif %}
     {% if showAccountLink %}
        <div class="govuk-grid-column-one-half govuk-!-padding-top-4">
            <div class="govuk-body-s account-info ">
                <span class="your-name govuk-!-padding-right-2" id="bannerUserName">Jamie Roberts</span><a class="account-link" href="details" id="signout-link">Sign out</a>
            </div>
        </div>
    {% endif %}
    {# LANGUAGE SELECTOR (not included in baseline)
        {% if showBackLink %}
        <div class="govuk-grid-column-one-half">
            {% include version ~ "/_includes/language-selector.njk" %}
        </div>
        {% else %}
            <div class="govuk-grid-column-full">
                {% include version ~ "/_includes/language-selector.njk" %}
            </div>
        {% endif %}
    #}
</div>