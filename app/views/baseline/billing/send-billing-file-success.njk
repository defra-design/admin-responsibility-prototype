{% extends "layouts/" + version + ".html" %}

{% block beforeContent %}
  {% set showBackLink = false %}
  {% set showAccountLink = true %}
  {% set serviceName = "Dashboard" %}
  {% include version ~ "/_includes/before-content.njk" %}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <form method="POST" action="classification">
          <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="approval-code-hint">
              <div class="govuk-form-group">
                  <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">
                      Billing file sent
                    </h1>
                    <div class="govuk-panel__body">
                      You have successfully sent the billing file to the FSS.
                    </div>
                  </div>

                  <hr class="govuk-section-break govuk-section-break--s govuk-section-break--invisible"><br>
                  <h2 class="govuk-heading-m">What happens next </h2>
                  <p class="govuk-body-m">The FSS will process the billing file based on the billing instructions you reviewed and confirmed.</p>
                  <p class="govuk-body-m">You can return to the dashboard to review calculation runs or start a new run.</p>
              </fieldset>
          </div>
          {% from "govuk/components/details/macro.njk" import govukDetails %}

          <div class="govuk-button-group">
            <a class="govuk-link" href="../paycal-dashboard">Return to dashboard</a>
          </div>
      </form>
    </div>
  </div>


{% endblock %}