
{% extends "layouts/" + version + ".html" %}

{% block beforeContent %}
  {% set showBackLink = true %}
  {% set showAccountLink = true %}
  {% include version ~ "/_includes/before-content.njk" %}
{% endblock %}

{% block content %}

     <h1 class="govuk-heading-l">
      {% if data.intent == "manageLaDisposalCosts" %}
        Upload new local authority costs
      {% elseif data.intent == "manageDefaultParameters" %}
        Upload new default calculator parameters
      {% else %}
        Upload new parameters
      {% endif %}
    </h1>

    {% if data.intent == "manageDefaultParameters" %}
    <h2 class="govuk-heading-m">Before you upload your file</h2>
    <p>Make sure you're using the latest version of the<a href="#" class="govuk-link--no-visited-state"> default parameters spreadsheet template.</a></p>
    {% endif %}

      <form method="POST" action="upload-success" enctype="multipart/form-data">
    
        <!-- FILE UPLOAD -->
        <div class="govuk-form-group">
          <h2 class="govuk-heading-m">
            <label class="govuk-label govuk-label--m" for="org-details" aria-describedby="organisation-file-hint">
              Upload a file
            </label>
          </h2>

          <p class="govuk-body">The file must be:</p>
          <ul class="govuk-list govuk-list--bullet">
            <li>smaller than 50KB</li>
            <li>in CSV format</li>
          </ul>
          <p class="govuk-body">It may take a few minutes for your file to upload - do not close the window while the file is uploading.</p>

          <input class="govuk-file-upload" id="settings-file" name="settings-file" type="file">
        </div>

        <!-- Hidden field to pass user intent -->
       
        {% if data.intent == "manageDefaultParameters" %}<input type="hidden" name="intent" value="manageDefaultParameters">
        {% elseif data.intent == "manageLaDisposalCosts" %}<input type="hidden" name="intent" value="manageLaDisposalCosts">
        {% endif %}
        
        {{ govukButton({ text: "Upload file" }) }}
      </form>
{% endblock %}
