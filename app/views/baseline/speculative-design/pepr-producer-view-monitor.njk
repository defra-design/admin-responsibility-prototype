{% extends "layouts/" + version + ".html" %}

{% block beforeContent %}
  {% set showBackLink = false %}
  {% set showAccountLink = true %}
  
  {% include version ~ "/_includes/before-content.njk" %}
{% endblock %}
{% set pageName="Timeline: Scheme Administrator Implementation of Eco-Modulation" %}

{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}

{% extends "layouts/main.html" %}

{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <span class="govuk-caption-xl">Internal Oversight: PackUK Scheme Administrator</span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">Producer Snapshot: Tesco Stores Ltd</h1>
    <p class="govuk-body-l">Comprehensive audit of <strong>2025 arrears</strong> and <strong>2026 obligations</strong> as of January 2026.</p>
    
    <div class="app-page-actions govuk-!-margin-bottom-8">
      {{ govukButton({
        text: "Download group data dump (CSV)",
        classes: "govuk-button--secondary govuk-!-margin-right-3"
      }) }}
      {{ govukButton({
        text: "Generate H1/H2 Reconciliation Report (PDF)",
        classes: "govuk-button--secondary govuk-!-margin-right-3"
      }) }}
      <a href="javascript:window.print()" class="govuk-link govuk-!-font-size-19">Print this report</a>
    </div>
  </div>
</div>

{# 1. HIERARCHICAL REGISTRATION & ARREARS TABLE #}
<div class="app-audit-section">
  <h2 class="govuk-heading-l govuk-!-border-top govuk-!-padding-top-6">1. Registration Fees & Arrears Audit</h2>
  <p class="govuk-body">Subsidiaries are nested under the Ultimate Parent to show legal relationships and individual debt status.</p>

  

  {{ govukTable({
    head: [
      { text: "Entity Hierarchy", classes: "app-table__cell--width-30" },
      { text: "Relationship" },
      { text: "2026 Reg Fee", format: "numeric" },
      { text: "2025 Late Fee", format: "numeric" },
      { text: "Status" },
      { text: "Action" }
    ],
    rows: [
      [
        { html: "<strong>Tesco Stores Ltd</strong><br><span class='govuk-hint'>PR-MAIN-001</span>" },
        { html: "<strong>Ultimate Parent</strong>" },
        { text: "£13,804", format: "numeric" },
        { text: "£0", format: "numeric" },
        { html: govukTag({ text: "Paid", classes: "govuk-tag--green" }) },
        { html: '<a href="#" class="govuk-link">Audit</a>' }
      ],
      [
        { html: "<span class='app-table__nested-indent'>&rdsh;</span> <strong>One Stop Stores</strong>" },
        { text: "Independently Obligated" },
        { text: "£3,137", format: "numeric" },
        { text: "£558", format: "numeric" },
        { html: govukTag({ text: "Late Fee Due", classes: "govuk-tag--orange" }) },
        { html: '<a href="#" class="govuk-link">Issue Notice</a>' }
      ],
      [
        { html: "<span class='app-table__nested-indent'>&rdsh;</span> <strong>Tesco Bank (OMP)</strong>" },
        { text: "Independently Obligated" },
        { text: "£5,580", format: "numeric" },
        { text: "£1,250", format: "numeric" },
        { html: govukTag({ text: "Unpaid", classes: "govuk-tag--red" }) },
        { html: '<a href="#" class="govuk-link">Enforce</a>' }
      ],
      [
        { html: "<span class='app-table__nested-indent'>&rdsh;</span> <strong>Jack's Retail</strong>" },
        { text: "Group Obligated" },
        { text: "£1,250", format: "numeric" },
        { text: "£0", format: "numeric" },
        { html: govukTag({ text: "Paid", classes: "govuk-tag--green" }) },
        { html: '<a href="#" class="govuk-link">Audit</a>' }
      ],
      [
        { html: "<span class='app-table__nested-indent'>&rdsh;</span> <strong>Tesco Mobile</strong>" },
        { text: "Group Obligated" },
        { text: "£1,250", format: "numeric" },
        { text: "£0", format: "numeric" },
        { html: govukTag({ text: "Paid", classes: "govuk-tag--green" }) },
        { html: '<a href="#" class="govuk-link">Audit</a>' }
      ]
    ]
  }) }}
</div>

{# 2. COMPLIANCE OBLIGATIONS (PRNs) #}
<div class="app-audit-section govuk-!-margin-top-9">
  <h2 class="govuk-heading-l govuk-!-border-top govuk-!-padding-top-6">2. 2025 Compliance Obligations (PRNs)</h2>
  <p class="govuk-body">Monitoring the purchase of Packaging Waste Recovery Notes (PRNs) against submitted 2025 material weights.</p>
  
  

  {{ govukTable({
    head: [
      { text: "Material Stream" },
      { text: "2025 Weight (T)" },
      { text: "PRNs Acquired" },
      { text: "Gap" },
      { text: "Status Code" }
    ],
    rows: [
      [
        { text: "Plastic" },
        { text: "120,000" },
        { text: "115,000" },
        { text: "5,000", format: "numeric" },
        { html: "<strong>FLG</strong> (Flagged)" }
      ],
      [
        { text: "Glass" },
        { text: "240,000" },
        { text: "240,000" },
        { text: "0", format: "numeric" },
        { html: "<strong>COM</strong> (Complete)" }
      ]
    ]
  }) }}
</div>

{# 3. WASTE DISPOSAL FEES #}
<div class="app-audit-section govuk-!-margin-top-9">
  <h2 class="govuk-heading-l govuk-!-border-top govuk-!-padding-top-6">3. 2025 Waste Disposal Fees (LA Payments)</h2>
  <p class="govuk-body">Reconciling household collection and disposal fees. 2026 Registration fees are separate from these operational costs.</p>
  
  <div class="app-kpi-panel govuk-!-margin-bottom-4" style="background:#f3f2f1; padding:20px; border-left:10px solid #1d70b8;">
    <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Total Estimated 2025 Liability</h3>
    <span class="govuk-heading-l">£175.1m</span>
  </div>

  {{ govukTable({
    head: [ { text: "Period" }, { text: "Est. Fee" }, { text: "Actual (RPD)" }, { text: "Adjustment" }, { text: "Status" } ],
    rows: [
      [ { text: "H1 2025" }, { text: "£85.5m" }, { text: "£84.2m" }, { text: "-£1.3m (Credit)" }, { html: govukTag({ text: "Reconciled", classes: "govuk-tag--green" }) } ],
      [ { text: "H2 2025" }, { text: "£89.6m" }, { text: "TBC" }, { text: "--" }, { html: govukTag({ text: "Pending", classes: "govuk-tag--blue" }) } ]
    ]
  }) }}
</div>

{# 4. MODULATION MOVEMENT #}
<div class="app-audit-section govuk-!-margin-top-9">
  <h2 class="govuk-heading-l govuk-!-border-top govuk-!-padding-top-6">4. Modulation Performance</h2>
  <p class="govuk-body">Tracking shifts in material recyclability based on Placed on Market (POM) data.</p>

  

  {{ govukTable({
    head: [ { text: "Subsidiary" }, { text: "Material Mix" }, { text: "Movement" }, { text: "Fee Impact" } ],
    rows: [
      [ { text: "One Stop Stores" }, { text: "28% Red" }, { html: "<span style='color:red'>↓ -13%</span>" }, { text: "+£8,550 (Penalty)" } ],
      [ { text: "Tesco Mobile" }, { text: "45% Green" }, { html: "<span style='color:green'>↑ +23%</span>" }, { text: "-£12,400 (Saving)" } ]
    ]
  }) }}
</div>

{# 5. CASE MANAGEMENT #}
<div class="app-audit-section govuk-!-margin-top-9">
  <h2 class="govuk-heading-l govuk-!-border-top govuk-!-padding-top-6">5. Case Management & Activity</h2>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukTextarea({
        name: "audit-note",
        id: "audit-note",
        label: { text: "Log a phone call or dispute note", classes: "govuk-label--s" }
      }) }}
      {{ govukButton({ text: "Save Note" }) }}

      <h3 class="govuk-heading-s govuk-!-margin-top-4">Activity Log</h3>
      <div class="app-activity-log">
        <div class="app-activity-log__item" style="border-bottom:1px solid #b1b4b6; padding-bottom:10px;">
          <p class="govuk-body-s"><strong>Jamie Roberts</strong> — 06 Jan 2026</p>
          {{ govukDetails({
            summaryText: "Query: Tesco Bank Late Fee (PR-OMP-101)",
            html: "<p class='govuk-body'>Producer claims 2025 late submission was due to RPD portal downtime on 14 Dec. Verified system logs; downtime confirmed. Recommendation: Waive £1,250 arrears.</p>"
          }) }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .app-table__nested-indent { color: #b1b4b6; padding-left: 20px; font-weight: normal; }
  .app-table__cell--width-30 { width: 30%; }
</style>
{% endblock %}